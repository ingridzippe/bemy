        <img src={{user.photo}} />

        <div class="form-container">

        <form id="form-data" action="/saveprofile" method="post">
            <div class="form-group" id="user-id-hide">
                <input type="text" class="form-control" name="userid" id="userid" value="{{user._id}}" placeholder="{{user._id}}">
            </div>
