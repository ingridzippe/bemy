                <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Example textarea</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>

            {{!-- zip code --}}
            <div class="form-group">
                <label for="exampleFormControlInput1">Your Zip Code:</label>
                <input type="text" class="form-control" name="zipcode" id="exampleFormControlInput1" placeholder="">
            </div>

            {{!-- city --}}
            <div class="form-group">
                <label for="exampleFormControlInput1">Your City:</label>
                <input type="text" class="form-control" name="city" id="exampleFormControlInput1" placeholder="">
            </div>

            {{!-- state --}}
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select class="form-control" name="state" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>

            {{!-- your gender --}}
            <label for="exampleInputEmail1">Your gender:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="female">
                <label class="form-check-label" for="exampleRadios2">
                Female
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="male">
                <label class="form-check-label" for="exampleRadios2">
                Male
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="non-conforming">
                <label class="form-check-label" for="exampleRadios2">
                Non-conforming
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="non-binary">
                <label class="form-check-label" for="exampleRadios2">
                Non-binary
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="i'm not really into labels">
                <label class="form-check-label" for="exampleRadios2">
                I'm not really into labels
                </label>
            </div>

            {{!-- lgbtq --}}
            <label for="exampleInputEmail1">Do you identify with the LGBTQ+ community?</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="lgbtq" id="exampleRadios3" value="yes">
                <label class="form-check-label" for="exampleRadios3">
                Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="lgbtq" id="exampleRadios3" value="no">
                <label class="form-check-label" for="exampleRadios3">
                No
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="lgbtq" id="exampleRadios3" value="i'd rather not say">
                <label class="form-check-label" for="exampleRadios3">
                I'd rather not say
                </label>
            </div>

            {{!-- your race --}}
            <label for="exampleInputEmail1">Which races do you identify with?</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Asian / Pacific Islander" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Asian / Pacific Islander
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Black / African American" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Black / African American
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Hispanic (May be of any race)" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1"></label>
                    Hispanic (May be of any race)
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Native American (Aleutian Islander)" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Native American (Aleutian Islander)
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="White (Non-Hispanic)" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    White (Non-Hispanic)
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Multi-racial" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Multi-racial
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="Native or Indegenous" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Native or Indegenous
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="I identify with a race not listed here" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    I identify with a race not listed here
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="race" value="I would prefer not to indicate my race" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    I would prefer not to indicate my race
                </label>
            </div>

            {{!-- submit button --}}
            <button type="submit" class="btn btn-primary">Submit</button>
            <button onclick="getFormData()">Try it</button>
        </form>

        </div>

    </main>

    <script>
        function getFormData() {
            var x = document.getElementById("form-data").elements[0].value;
            console.log(x);
        }
    </script>
</body>


